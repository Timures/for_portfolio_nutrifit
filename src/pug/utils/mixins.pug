mixin item(title, descr)
    .item
        h2.item-title= test
        p.item-descr= descr

mixin navlink(adress, name, navclass)
    li.nav__item
        a(class= navclass href= adress)= name

mixin services-item(srv_icon, srv_name, srv_desc)
    .services-item
        i(class='ic ' + srv_icon)
        .services__name= srv_name
        .services__desc= srv_desc

mixin yoga-item(yoga_icon, yoga_name, yoga_desc)
    .yoga-item
        i(class='ic yoga__icon ' + yoga_icon)
        .yoga__name= yoga_name
        .yoga__desc= yoga_desc

mixin previews-item(previews_icon, previews_name, previews_text)
    .previews-item
        .previews-item__wrapper
            i(class='ic ' + previews_icon)
            .previews-item__content
                .previews-item__name= previews_name
                .previews-item__text= previews_text
                .previews-item__rate
                    .rate__icon
                    .rate__text

mixin coaching-item(coaching_item_img_bg, coaching_item_title, coaching_item_desc)
    .coaching-item
        .coaching-item__wrapper
            div(class='coaching-item__image ' + coaching_item_img_bg)
            .coaching-item__text
                .coaching-item__title= coaching_item_title
                .coaching-item__desc= coaching_item_desc

mixin steps-item(steps_image, steps_title_color, steps_title, steps_desc, button_steps, button_text)
    .steps-item
        .steps-item__wrapper
            div(class='steps-item__image ' + steps_image)
            .steps-content
                .steps-content__text
                    div(class='steps-content__title ' + steps_title_color)= steps_title
                    .steps-content__desc= steps_desc
                button(class='button ' + button_steps)= button_text